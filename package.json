{
  "name": "preact-hint",
  "version": "0.3.0",
  "type": "module",
  "source": "src/index.tsx",
  "types": "dist/preact-hint.d.ts",
  "exports": {
    ".": "./dist/preact-hint.js",
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css"
  },
  "license": "MIT",
  "description": "Tooltip Component for Preact",
  "homepage": "https://rschristian.github.io/preact-hint",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rschristian/preact-hint.git"
  },
  "keywords": [
    "preact",
    "hint",
    "tooltip",
    "component"
  ],
  "files": [
    "dist",
    "LICENSE",
    "package.json",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "microbundle -f modern",
    "postbuild": "mv dist/preact-hint.css dist/style.css & mv dist/index.d.ts dist/preact-hint.d.ts",
    "serve:dev": "pnpm --filter=docs serve:dev & pnpm build:local --watch",
    "build:docs": "pnpm build:local && pnpm --filter=docs build",
    "serve:prod": "pnpm --filter=docs serve:prod",
    "build:local": "microbundle -f modern -o docs/src/preact-hint --no-generateTypes",
    "format": "prettier --write --ignore-path .gitignore ."
  },
  "peerDependencies": {
    "preact": "^10.23.0"
  },
  "devDependencies": {
    "microbundle": "^0.15.1",
    "preact": "^10.26.4",
    "prettier": "^2.6.2",
    "prettier-config-rschristian": "^0.1.1",
    "typescript": "^4.9.4"
  },
  "prettier": "prettier-config-rschristian",
  "workspaces": [
    "docs"
  ]
}
